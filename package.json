{
  "name": "whatsapp-chatbot-system",
  "version": "1.0.0",
  "description": "Sistema completo de chatbot WhatsApp com React + TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && cd client && npm run build",
    "start": "node dist/server-baileys.js",
    "start:baileys": "node dist/server-baileys.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:baileys": "concurrently \"npm run server:baileys:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch src/server.ts",
    "server:baileys:dev": "tsx watch src/server-baileys.ts",
    "client:dev": "cd client && npm run dev",
    "server:build": "tsc",
    "client:build": "cd client && npm run build",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:up": "tsx src/scripts/migrate.ts up",
    "migrate:down": "tsx src/scripts/migrate.ts down",
    "migrate:sessions": "tsx src/scripts/migrate-sessions.ts",
    "db:setup": "npm run migrate:up"
  },
  "dependencies": {
    "@adiwajshing/keyed-db": "^0.2.4",
    "@types/bcrypt": "^6.0.0",
    "@whiskeysockets/baileys": "^6.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "curve25519-js": "^0.0.4",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "libsodium-wrappers": "^0.7.15",
    "moment-timezone": "^0.5.45",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "node-fetch": "^2.7.0",
    "pino": "^9.9.1",
    "puppeteer": "^22.15.0",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.7.4",
    "whatsapp-web.js": "^1.32.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
